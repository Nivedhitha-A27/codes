import java.util.Scanner;
class Main {
    public static void main(String[] args) {
        Scanner scan=new Scanner(System.in);
        System.out.println("Enter number:");
        int n=scan.nextInt();
        int sum=0;
        int i =0;
        while(i<=n){
            if(i%2==0){
                sum=sum+i;
            }
            i++;
        }
        System.out.println(sum);
          
    }
}
